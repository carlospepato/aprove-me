generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recebivel {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime @default(now())
  cedentId     String
  assignor     Cedent   @relation(fields: [cedentId], references: [id])

  @@map("recebiveis")
}

model Cedent {
  id         String      @id @default(uuid())
  document   String
  email      String      @unique
  phone      String
  name       String
  recebiveis Recebivel[]
  User       User[]

  @@map("cedents")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  name     String
  cedentId String
  cedent   Cedent @relation(fields: [cedentId], references: [id])

  @@map("users")
}
