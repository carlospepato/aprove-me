generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recebivel {
  id           String   @id @default(uuid())
  value        Float
  emissionDate DateTime @default(now())
  assignor     Cedent   @relation(fields: [cedentId], references: [id])
  cedentId     String

  @@map("recebiveis")
}

model Cedent {
  id         String      @id @default(uuid())
  document   String
  email      String
  phone      String
  name       String
  recebiveis Recebivel[]
  User       User[]

  @@unique([email])
  @@map("cedents")
}

model User {
  id       String @id @default(uuid())
  email    String
  password String
  name     String
  cedent   Cedent @relation(fields: [cedentId], references: [id])
  cedentId String

  @@unique([email])
  @@map("users")
}
